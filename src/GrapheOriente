import java.util.List;
import java.util.ArrayList;


public class GrapheOriente extends Graphe {

    @Override
    public List<Sommet> getVoisins(Sommet s) {
        List<Sommet> voisins = new ArrayList<>();

        //on regarde tous les sommets accessibles depuis s
        for (Arete a : aretes) {

            // on prend que les rues orientées (sens unique)
            if (a.estOrientee()) {

                // Si s est la source, alors on peut aller vers destination
                if (a.getSommetDepart().getId() == s.getId()) {
                    voisins.add(a.getSommetArrivee());
                }
            }
        }

        return voisins;
    }

    @Override
    public List<Arete> getAretesSortantes(Sommet s) {
        List<Arete> sorties = new ArrayList<>();

        for (Arete a : aretes) {

            if (a.estOrientee()) {
                // Arête sortante : source == s
                if (a.getSommetDepart().getId() == s.getId()) {
                    sorties.add(a);
                }
            }
        }

        return sorties;
    }
}
